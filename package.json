{
  "name": "basisjs-tools-server",
  "title": "Basis.js dev-server",
  "version": "1.0.0",
  "homepage": "https://github.com/basisjs/basisjs-tools-server",
  "description": "Dev-server for basis.js framework",
  "author": "Roman Dvornov <rdvornov@gmail.com>",
  "license": "MIT",
  "contributors": [
    "Roman Dvornov <rdvornov@gmail.com>"
  ],
  "repository": "basisjs/basisjs-tools-server",
  "main": "./lib/index.js",
  "engines": {
    "node": ">=0.12.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-undef": 2,
      "no-unused-vars": [2, {"vars": "all", "args": "after-used"}]
    }
  },
  "scripts": {
    "codestyle": "jscs lib && eslint lib",
    "test-all": "npm run test-code && npm test",
    "travis": "npm run test-all"
  },
  "dependencies": {
    "basisjs-tools-config": "^1.1.0",
    "basisjs-tools-ast": "^1.1.0",
    "basisjs-tools-build": "^1.4.0",
    "open-in-editor": "^2.1.0",
    "clap": "~1.1.3",
    "update-notifier": "0.6.3",
    "chalk": "~1.1.3",
    "exit": "0.1.2",
    "resolve": "1.1.7",
    "minimatch": "~3.0.2",
    "socket.io": "~1.7.3",
    "socket.io-client": "~1.7.3",
    "http-proxy": "0.10.4",
    "mime": "1.3.4",
    "rempl": "1.0.0-alpha10"
  },
  "devDependencies": {
    "eslint": "^2.2.0",
    "jscs": "~2.11.0"
  },
  "files": [
    "bin",
    "lib",
    "HISTORY.md",
    "LICENSE",
    "README.md"
  ]
}
